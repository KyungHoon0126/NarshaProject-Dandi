                            <TextBlock FontSize="14" FontStyle="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Title, StringFormat=제목 : {0}}"/>
                            <TextBlock FontSize="14" FontStyle="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Start_Date, StringFormat=일정 시작 : yyyy-MM-dd}"/>
                            <TextBlock FontSize="14" FontStyle="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding End_Date, StringFormat=일정 종료 : yyyy-MM-dd}"/>
