                            <!--<TextBlock FontSize="13" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Channel.ThumbNail, StringFormat=ThumbNail : {0}}"/>-->

                            <!--ChannelEventEvent-->
