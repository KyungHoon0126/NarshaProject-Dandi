<Window x:Class="Dandi.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dandi"
        mc:Ignorable="d"
        Title="설정창" Height="300" Width="245"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!--Button Highlight 효과 제거, 가져다 대면 블럭지정되는 현상 제거 스타일-->
    <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</Window.Resources>
    
    <Grid>
        <Image Margin="0,0,-0.4,0" 
               Source="Assets/노란제일큰배경.png" 
               Stretch="Fill"/>

        <local:MasterControl x:Name="ctrlReWindowLoad" Visibility="Collapsed"/>

        <Button x:Name="btnexit" 
                Content="EXIT" 
                Margin="80,175,81.4,53.4" 
                HorizontalAlignment="Center" 
                HorizontalContentAlignment="Center" 
                VerticalAlignment="Center" 
                VerticalContentAlignment="Center" 
                Height="42" Width="77" 
                Click="BtnCloseClick"
                Background="Transparent"
                Foreground="White"
                BorderBrush="Transparent"
                FontSize="20"
                FontFamily="나눔고딕"
                Style="{StaticResource ButtonStyle}"/>

        <Button x:Name="btnDataReLoad"
                Content="Schedule ReLoading"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="White"
                FontSize="20"
                Click="BtnDataLoadingClick"
                FontFamily="나눔고딕" Margin="11,10,14.4,205.4" Height="55" Width="213"
                Style="{StaticResource ButtonStyle}"/>
    </Grid>
</Window>
